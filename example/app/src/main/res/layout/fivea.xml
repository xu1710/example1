<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">

	<Button
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:text="线程改UI"
		android:id="@+id/fiveaButton1"/>

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:text="Text"
		android:id="@+id/fiveaTextView1"/>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal">

		<Button
			android:layout_height="wrap_content"
			android:layout_width="0dp"
			android:text="打开服务"
			android:id="@+id/fiveaButton2"
			android:layout_weight="1.0"/>

		<Button
			android:layout_height="wrap_content"
			android:layout_width="0dp"
			android:text="关闭服务"
			android:id="@+id/fiveaButton3"
			android:layout_weight="1.0"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal">

		<Button
			android:layout_height="wrap_content"
			android:layout_width="0dp"
			android:text="绑定服务"
			android:id="@+id/fiveaButton4"
			android:layout_weight="1.0"/>

		<Button
			android:layout_height="wrap_content"
			android:layout_width="0dp"
			android:text="解绑服务"
			android:id="@+id/fiveaButton5"
			android:layout_weight="1.0"/>

		<Button
			android:layout_height="wrap_content"
			android:layout_width="0dp"
			android:text="intentservice"
			android:id="@+id/fiveaButton6"
			android:layout_weight="1.0"
			android:textSize="8sp"/>

	</LinearLayout>

</LinearLayout>

